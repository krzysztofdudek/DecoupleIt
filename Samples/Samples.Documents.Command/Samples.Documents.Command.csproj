<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <NoWarn>1591</NoWarn>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <DocumentationFile>bin\Debug\Samples.Documents.Command.xml</DocumentationFile>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DocumentationFile>bin\Release\Samples.Documents.Command.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\..\Libraries\AspNetCore.Service\AspNetCore.Service.csproj" />
      <ProjectReference Include="..\Samples.Clients.Command.Contracts\Samples.Clients.Command.Contracts.csproj" />
      <ProjectReference Include="..\Samples.Documents.Command.Contracts\Samples.Documents.Command.Contracts.csproj" />
    </ItemGroup>

    <Target Name="Test run" AfterTargets="Build">
        <Exec EnvironmentVariables="ASPNETCORE_ENVIRONMENT=Development;ASPNETCORE_TESTRUN=true" Command="dotnet $(MSBuildProjectDirectory)/$(OutputPath)$(MSBuildProjectName).dll" CustomErrorRegularExpression="ERROR" />
    </Target>

</Project>
