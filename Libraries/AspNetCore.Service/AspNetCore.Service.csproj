<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <VersionPrefix>0.0.4</VersionPrefix>
        <VersionSuffix>alpha</VersionSuffix>
        <OpenApiGenerateDocuments>false</OpenApiGenerateDocuments>
        <Title>DecoupleIt - ASP .NET Core base service library</Title>
        <Description>Implements base web application host with extensible modules.</Description>
    </PropertyGroup>

    <Import Project="../netcoreapp.props" />

    <ItemGroup>
      <ProjectReference Include="..\Contextual.UnitOfWork\Contextual.UnitOfWork.csproj" />
      <ProjectReference Include="..\DependencyInjection.Automatic\DependencyInjection.Automatic.csproj" />
      <ProjectReference Include="..\HttpAbstraction\HttpAbstraction.csproj" />
      <ProjectReference Include="..\InternalEvents.AspNetCore\InternalEvents.AspNetCore.csproj" />
      <ProjectReference Include="..\Options.Automatic\Options.Automatic.csproj" />
      <ProjectReference Include="..\Tracing.AspNetCore\Tracing.AspNetCore.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Swashbuckle.AspNetCore" Version="5.*" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'netcoreapp2.2'">
        <PackageReference Include="Microsoft.Extensions.Configuration" Version="2.*" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="2.*" />
        <PackageReference Include="Microsoft.Extensions.Configuration.CommandLine" Version="2.*" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="2.*" />
        <PackageReference Include="Microsoft.Extensions.Logging" Version="2.*" />
        <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="2.*" />
        <PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="2.*" />
        <PackageReference Include="Microsoft.AspNetCore.Hosting" Version="2.*" />
        <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.*" />
        <PackageReference Include="Microsoft.AspNetCore.Server.Kestrel" Version="2.*" />
        <PackageReference Include="Microsoft.AspNetCore.Rewrite" Version="2.*" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'netcoreapp3.1'">
        <PackageReference Include="Microsoft.Extensions.Configuration" Version="3.*" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="3.*" />
        <PackageReference Include="Microsoft.Extensions.Logging" Version="3.*" />
    </ItemGroup>

</Project>
